<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/discover_result_item_width"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/discoverItemImageView"
        android:layout_width="@dimen/discover_result_image_width"
        android:layout_height="@dimen/discover_result_image_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/keyline"/>

    <TextView
        style="@style/DiscoverItemTitleText"
        android:id="@+id/discoverTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>