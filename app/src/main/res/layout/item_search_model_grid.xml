<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/searchModelImageView"
            android:layout_width="@dimen/search_model_poster_width"
            android:layout_height="@dimen/search_model_poster_height"
            android:layout_marginBottom="@dimen/keyline"/>

        <TextView
            android:id="@+id/searchModelRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/search_model_rating_margin_bottom"
            android:layout_marginEnd="@dimen/search_model_rating_margin_end"
            android:gravity="center"
            android:background="@drawable/rounded_corner_rating_background"
            android:textColor="@color/white"/>

    </FrameLayout>

    <TextView
        style="@style/SearchModelGridTitleText"
        android:id="@+id/searchModelTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>