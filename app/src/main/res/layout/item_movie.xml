<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="@dimen/search_model_poster_width"
            android:layout_height="@dimen/search_model_poster_height"
            android:layout_marginBottom="@dimen/keyline"/>

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/search_model_rating_margin_bottom"
            android:layout_marginEnd="@dimen/search_model_rating_margin_end"
            android:gravity="center"
            android:background="@drawable/rounded_corner_rating_background"
            android:textColor="@color/white"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top|start">

            <TextView
                android:id="@+id/releaseDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_2x"
                android:layout_marginBottom="@dimen/keyline"/>

            <TextView
                style="@style/MoviesListItemTitleText"
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_2x"
                android:layout_marginBottom="@dimen/keyline"/>

            <TextView
                android:id="@+id/genresTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_2x"
                android:layout_marginBottom="@dimen/keyline"/>

            <TextView
                android:id="@+id/runtimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_2x"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/watchlistButton"
                android:layout_width="@dimen/movies_list_toggle_button_size"
                android:layout_height="@dimen/movies_list_toggle_button_size"
                android:layout_marginEnd="@dimen/keyline"
                android:background="?android:selectableItemBackground"/>

            <ImageButton
                android:id="@+id/watchedButton"
                android:layout_width="@dimen/movies_list_toggle_button_size"
                android:layout_height="@dimen/movies_list_toggle_button_size"
                android:layout_marginEnd="@dimen/keyline"
                android:background="?android:selectableItemBackground"/>

            <ImageButton
                android:id="@+id/addToListButton"
                android:layout_width="@dimen/movies_list_toggle_button_size"
                android:layout_height="@dimen/movies_list_toggle_button_size"
                android:background="?android:selectableItemBackground"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
