<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="@dimen/search_model_poster_width"
            android:layout_height="@dimen/search_model_poster_height"
            android:layout_marginBottom="@dimen/keyline"/>

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/search_model_rating_margin_bottom"
            android:layout_marginEnd="@dimen/search_model_rating_margin_end"
            android:gravity="center"
            android:background="@drawable/rounded_corner_rating_background"
            android:textColor="@color/white"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/MoviesListItemTitleText"
            android:id="@+id/titleAndReleaseDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_2x"
            android:layout_marginBottom="@dimen/keyline"/>

        <TextView
            android:id="@+id/genresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_2x"
            android:layout_marginBottom="@dimen/keyline_2x"/>

        <TextView
            android:id="@+id/runtimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_2x"
            android:layout_marginEnd="@dimen/keyline_2x"/>

    </LinearLayout>

</LinearLayout>
