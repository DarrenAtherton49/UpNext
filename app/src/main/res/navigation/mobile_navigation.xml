<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobileNavigation"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.atherton.tmdb.ui.features.discover.DiscoverFragment"
        android:label="@string/fragment_label_discover"
        tools:layout="@layout/fragment_discover">
        <action
            android:id="@+id/actionGoToSearchResults"
            app:destination="@+id/searchResultsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.atherton.tmdb.ui.features.search.results.SearchResultsFragment"
        android:label="@string/fragment_label_search_results"
        tools:layout="@layout/fragment_search_results"/>

</navigation>