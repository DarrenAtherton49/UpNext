<resources>

    <!-- https://medium.com/over-engineering/setting-up-a-material-components-theme-for-android-fbf7774da739 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>
        <item name="editTextStyle">@style/SearchEditText</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
    </style>

    <style name="SearchEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textCursorDrawable">@null</item> <!-- forces cursor to be same color as query -->
    </style>

    <style name="TvMovieDetailTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:minLines">@integer/movie_tv_detail_title_min_lines</item>
        <item name="android:maxLines">@integer/movie_tv_detail_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvMovieDetailReleaseDateRuntimeText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:maxLines">@integer/movie_tv_detail_release_date_runtime_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TvMovieDetailOverviewText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:maxLines">@integer/movie_tv_detail_overview_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TvMovieDetailSectionHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:maxLines">@integer/movie_tv_detail_section_header_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TvMovieDetailVideoFirstRowText" parent="TvMovieDetailScrollingItemFirstRowText">
        <item name="android:minLines">@integer/movie_tv_detail_video_item_first_row_lines</item>
        <item name="android:maxLines">@integer/movie_tv_detail_video_item_first_row_lines</item>
    </style>

    <style name="TvMovieDetailScrollingItemFirstRowText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:maxLines">@integer/movie_tv_detail_section_scrollable_item_text_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TvMovieDetailScrollingItemSecondRowText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:maxLines">@integer/movie_tv_detail_section_scrollable_item_text_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SearchModelGridTitleText">
        <item name="android:minLines">@integer/search_model_grid_title_min_lines</item>
        <item name="android:maxLines">@integer/search_model_grid_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="SearchModelListTitleText">
        <item name="android:minLines">@integer/search_model_list_title_min_lines</item>
        <item name="android:maxLines">@integer/search_model_list_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TvMoviesTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>

    <style name="DiscoverTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="PrimaryActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="backgroundTint">@color/colorSecondaryVariant</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="rippleColor">@color/colorSecondary</item>
        <item name="iconTint">@color/colorOnSecondary</item>
    </style>

</resources>
